<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Bases -->
  <ThingDef ParentName="ApparelBase" Name="MCBackPackBase" Abstract="True">
    <techLevel>Industrial</techLevel>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <tags>
        <li>Outlander</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
      <layers>
        <li>Shell</li>
      </layers>
      <bodyPartGroups>
        <li>Waist</li>
      </bodyPartGroups>
    </apparel>
    <costList>
      <Cloth>20</Cloth>
    </costList>
    <generateCommonality>2</generateCommonality>
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Tailor</effectWorking>
      <soundWorking>Recipe_Tailor</soundWorking>
      <unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
    </recipeMaker>
  </ThingDef>
  <ThingDef ParentName="MCBackPackBase" Name="MCSmallBackpackBase" Abstract="True">
    <description>A small backpack to make carry things more convinient.</description>
    <statBases>
      <Insulation_Cold>2</Insulation_Cold>
      <MaxHitPoints>120</MaxHitPoints>
      <WorkToMake>6000</WorkToMake>
      <Mass>2</Mass>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.15</MoveSpeed>
      <CarryingCapacity>75</CarryingCapacity>
    </equippedStatOffsets>
    <costStuffCount>40</costStuffCount>
  </ThingDef>
  <ThingDef ParentName="MCBackPackBase" Name="MCLargeBackpackBase" Abstract="True">
    <description>A large backpack to make carry even more things more convinient.</description>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToMake>8000</WorkToMake>
      <Mass>6</Mass>
      <Insulation_Cold>3</Insulation_Cold>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.35</MoveSpeed>
      <CarryingCapacity>150</CarryingCapacity>
    </equippedStatOffsets>
    <costStuffCount>100</costStuffCount>
  </ThingDef>
  <!-- Backpacks -->
  <ThingDef ParentName="MCSmallBackpackBase">
    <defName>SmallBackpackMC</defName>
    <label>Dark Small Backpack</label>
    <graphicData>
      <texPath>Things/SmallBackpack/SmallBackpack</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>6</weight>
          <only>RGBA(0.2,0.2,0.2,1)</only>
        </li>
      </options>
    </colorGenerator>
    <apparel>
      <wornGraphicPath>Things/SmallBackpack/SmallBackpack</wornGraphicPath>
    </apparel>
  </ThingDef>
  <ThingDef ParentName="MCSmallBackpackBase">
    <defName>SmallBackpackNaturalMC</defName>
    <label>Colorful Small Backpack</label>
    <graphicData>
      <texPath>Things/SmallBackpackNatural/SmallBackpackNatural</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <apparel>
      <wornGraphicPath>Things/SmallBackpackNatural/SmallBackpackNatural</wornGraphicPath>
    </apparel>
  </ThingDef>
  <ThingDef ParentName="MCLargeBackpackBase">
    <defName>LargeBackpackMC</defName>
    <label>Dark Large Backpack</label>
    <graphicData>
      <texPath>Things/LargeBackpack/LargeBackpack</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>6</weight>
          <only>RGBA(0.2,0.2,0.2,1)</only>
        </li>
      </options>
    </colorGenerator>
    <apparel>
      <wornGraphicPath>Things/LargeBackpack/LargeBackpack</wornGraphicPath>
    </apparel>
  </ThingDef>
  <ThingDef ParentName="MCLargeBackpackBase">
    <defName>LargeBackpackNaturalMC</defName>
    <label>Colorful Large Backpack</label>
    <graphicData>
      <texPath>Things/LargeBackpackNatural/LargeBackpackNatural</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <apparel>
      <wornGraphicPath>Things/LargeBackpackNatural/LargeBackpackNatural</wornGraphicPath>
    </apparel>
  </ThingDef>
  <!-- Nano suit -->
  <ThingDef ParentName="ApparelBase">
    <defName>NanoSuitMC</defName>
    <label>Nanosuit</label>
    <techLevel>Spacer</techLevel>
    <description>A nano fiber jumpsuit made for military personnel.</description>
    <graphicData>
      <texPath>Things/NanoSuit/NanoSuit</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <Mass>0.6</Mass>
      <WorkToMake>40000</WorkToMake>
      <MaxHitPoints>420</MaxHitPoints>
      <MarketValue>6500</MarketValue>
      <ArmorRating_Blunt>0.5</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.2</ArmorRating_Sharp>
      <ArmorRating_Heat>0.55</ArmorRating_Heat>
      <Insulation_Cold>15</Insulation_Cold>
      <Insulation_Heat>10</Insulation_Heat>
      <Flammability>0.0</Flammability>
      <DeteriorationRate>0</DeteriorationRate>
      <Beauty>4</Beauty>
      <SellPriceFactor>0.75</SellPriceFactor>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>3.0</MoveSpeed>
      <WorkSpeedGlobal>0.30</WorkSpeedGlobal>
      <CookSpeed>0.25</CookSpeed>
      <FoodPoisonChance>-0.250</FoodPoisonChance>
      <ButcheryFleshSpeed>0.15</ButcheryFleshSpeed>
      <MedicalSurgerySuccessChance>0.15</MedicalSurgerySuccessChance>
      <MedicalTendQuality>0.15</MedicalTendQuality>
      <MedicalTendSpeed>0.50</MedicalTendSpeed>
      <MedicalOperationSpeed>0.25</MedicalOperationSpeed>
      <ToxicResistance>1.0</ToxicResistance>
      <ShootingAccuracyPawn>0.15</ShootingAccuracyPawn>
      <MeleeDodgeChance>0.25</MeleeDodgeChance>
      <CarryingCapacity>150</CarryingCapacity>
    </equippedStatOffsets>
    <costStuffCount>200</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <costList>
      <Plasteel>175</Plasteel>
      <ComponentIndustrial>18</ComponentIndustrial>
    </costList>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <generateCommonality>0.1</generateCommonality>
    <apparel>
      <tags>
        <li>Outlander</li>
        <li>Royal</li>
        <li>RoyalCombatGear</li>
        <li>RoyalTier7</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
      <wornGraphicPath>Things/NanoSuit/NanoSuit</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <bodyPartGroups>
        <li>Neck</li>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
        <li>Feet</li>
        <li>Hands</li>
      </bodyPartGroups>
    </apparel>
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Tailor</effectWorking>
      <soundWorking>Recipe_Tailor</soundWorking>
      <unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
      <researchPrerequisite>PoweredArmor</researchPrerequisite>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
    </recipeMaker>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>6</weight>
          <only>RGBA(0.2,0.2,0.2,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
</Defs>